.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:contents, :index)
      %li=link_to pat(:new), url(:contents, :new)
      %li.active=link_to pat(:edit), url(:contents, :edit, :id => @content.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:content)
    .inner
      -form_for :content, url(:contents, :update, :id => @content.id), :method => :put, :class => :form do |f|
        =partial "contents/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
