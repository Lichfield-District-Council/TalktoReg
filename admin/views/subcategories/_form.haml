.group
  =f.label :title
  =f.error_message_on :title
  =f.text_field :title, :class => :text_field

.group
  =f.label :body
  =f.error_message_on :body
  ~f.text_area :body, :class => :text_area

.group
  =f.label :category_id
  =f.error_message_on :category_id
  =f.text_field :category_id, :class => :text_field

- if current_account.role == "admin"
  .group
    =f.label :snac, :caption => "Council"
    =f.error_message_on :snac
    =f.select :snac, :collection => Council.all, :fields => [:name, :snac], :include_blank => 'All'
-else
  = f.hidden_field :snac, :value => current_account.snac
		

.group.navform.wat-cf
  =f.submit pat(:save), :class => :button
  =f.submit pat(:cancel), :onclick => "window.location='#{url(:subcategories, :index)}';return false", :class => :button
