.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:subcategories, :index)
      %li=link_to pat(:new), url(:subcategories, :new)
      %li.active=link_to pat(:edit), url(:subcategories, :edit, :id => @subcategory.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:subcategory)
    .inner
      -form_for :subcategory, url(:subcategories, :update, :id => @subcategory.id), :method => :put, :class => :form do |f|
        =partial "subcategories/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
